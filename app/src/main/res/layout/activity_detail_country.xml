<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".view.DetailCountryActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/title_cardview"
        style="@style/detailCardCountry"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/name_country_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                android:background="@drawable/title_detail_country"
                android:fontFamily="serif-monospace"
                android:text="Name Pais"
                android:paddingVertical="8dp"
                android:textAlignment="center"
                android:textSize="24sp"
                android:textStyle="bold" />


            <ImageView
                android:id="@+id/flag_imageview"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginTop="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/name_country_textview"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="12dp"
                android:paddingVertical="8dp"
                app:layout_constraintTop_toBottomOf="@id/flag_imageview"
                android:background="@drawable/resume_detail_country">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="4dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/subjectDetail"
                        android:text="Capital : "/>

                    <TextView
                        android:id="@+id/capital_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/resumeDetail"
                        android:text="capital"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="4dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/subjectDetail"
                        android:text="Poblacion : "/>

                    <TextView
                        android:id="@+id/population_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/resumeDetail"
                        android:text="poblacion"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="4dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/subjectDetail"
                        android:text="Region : "/>

                    <TextView
                        android:id="@+id/region_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/resumeDetail"
                        android:text="region"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="4dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/subjectDetail"
                        android:text="Codigo : "/>

                    <TextView
                        android:id="@+id/code_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/resumeDetail"
                        android:text="codigo"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="4dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/subjectDetail"
                        android:text="Area : "/>

                    <TextView
                        android:id="@+id/area_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/resumeDetail"
                        android:text="area"/>
                </LinearLayout>
            </LinearLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>